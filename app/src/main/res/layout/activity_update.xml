<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_primer"
    tools:context=".UpdateActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/logo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_bei_1_white"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_white"
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:background="@drawable/bg_white"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:text="Name"
            android:textColor="#91361a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/bg_white"
            app:layout_constraintTop_toTopOf="@id/bg_white" />

        <!-- Name EditText -->
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:hint="Place Holder here"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="24dp"
            android:inputType="textPersonName"
            android:background="@drawable/bg_form"
            app:layout_constraintStart_toStartOf="@id/Name"
            app:layout_constraintTop_toBottomOf="@id/Name"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Gender"
            android:textColor="#91361a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/Name"
            app:layout_constraintTop_toBottomOf="@id/editTextName" />

        <LinearLayout
            android:id="@+id/checkboxContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/Gender">

            <CheckBox
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dateBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Date of Birth"
            android:textColor="#91361a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/Gender"
            app:layout_constraintTop_toBottomOf="@id/checkboxContainer" />

        <!-- Time Picker EditText -->
        <EditText
            android:id="@+id/editTimePicker"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:hint="Place Holder here"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="24dp"
            android:inputType="date"
            android:drawableRight="@drawable/ic_calendar"
            android:background="@drawable/bg_form"
            app:layout_constraintStart_toStartOf="@id/dateBirth"
            app:layout_constraintTop_toBottomOf="@id/dateBirth"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/emailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email Address"
            android:textColor="#91361a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/Name"
            app:layout_constraintTop_toBottomOf="@id/editTimePicker" />

        <!-- Email EditText -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:hint="Place Holder here"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="24dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_form"
            app:layout_constraintStart_toStartOf="@id/Name"
            app:layout_constraintTop_toBottomOf="@id/emailAddress"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Phone Number"
            android:textColor="#91361a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/Name"
            app:layout_constraintTop_toBottomOf="@id/editTextEmail" />

        <!-- Phone Number EditText -->
        <EditText
            android:id="@+id/editPhoneNumber"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:hint="Place Holder here"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="24dp"
            android:inputType="phone"
            android:background="@drawable/bg_form"
            app:layout_constraintStart_toStartOf="@id/Name"
            app:layout_constraintTop_toBottomOf="@id/phoneNumber"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/photoProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Photo Profile"
            android:textColor="#91361a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/Name"
            app:layout_constraintTop_toBottomOf="@id/editPhoneNumber" />

        <!-- Photo Profile -->
        <EditText
            android:id="@+id/editPhotoProfile"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:hint="Place Holder here"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="24dp"
            android:inputType="textUri"
            android:background="@drawable/bg_form"
            android:drawableEnd="@drawable/ic_insert_link"
            app:layout_constraintStart_toStartOf="@id/Name"
            app:layout_constraintTop_toBottomOf="@id/photoProfile"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update_users"
            android:layout_width="370dp"
            android:layout_height="47dp"
            app:layout_constraintTop_toBottomOf="@+id/editPhotoProfile"
            app:layout_constraintStart_toStartOf="@id/editPhotoProfile"
            app:layout_constraintEnd_toEndOf="@id/editPhotoProfile"
            android:background="@drawable/bg_button"
            android:textSize="12sp"
            android:text="Update Users"
            android:textColor="@color/white"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
